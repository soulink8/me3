{
  "$ref": "#/definitions/Me3Profile",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Me3Button": {
      "additionalProperties": false,
      "properties": {
        "icon": {
          "description": "Optional icon (emoji or icon identifier)",
          "type": "string"
        },
        "style": {
          "description": "Button style",
          "enum": [
            "primary",
            "secondary",
            "outline"
          ],
          "type": "string"
        },
        "text": {
          "description": "Button text (max 30 chars)",
          "type": "string"
        },
        "url": {
          "description": "URL to open when clicked",
          "type": "string"
        }
      },
      "required": [
        "text",
        "url"
      ],
      "type": "object"
    },
    "Me3Footer": {
      "additionalProperties": false,
      "properties": {
        "link": {
          "$ref": "#/definitions/Me3FooterLink",
          "description": "Optional custom footer link"
        },
        "text": {
          "description": "Custom footer text (e.g. \"Built by Jane\")",
          "type": "string"
        }
      },
      "type": "object"
    },
    "Me3FooterLink": {
      "additionalProperties": false,
      "properties": {
        "text": {
          "description": "Link text",
          "type": "string"
        },
        "url": {
          "description": "URL to open when clicked",
          "type": "string"
        }
      },
      "required": [
        "text",
        "url"
      ],
      "type": "object"
    },
    "Me3IntentBook": {
      "additionalProperties": false,
      "description": "Booking/scheduling intent. Declares that the person accepts meeting bookings.",
      "properties": {
        "description": {
          "description": "What the meeting is about",
          "type": "string"
        },
        "duration": {
          "description": "Meeting duration in minutes",
          "type": "number"
        },
        "enabled": {
          "description": "Whether booking is enabled",
          "type": "boolean"
        },
        "provider": {
          "description": "Booking provider (e.g., \"cal.com\", \"calendly\")",
          "type": "string"
        },
        "title": {
          "description": "Meeting title (e.g., \"30-min Consultation\")",
          "type": "string"
        },
        "url": {
          "description": "Direct booking URL",
          "type": "string"
        }
      },
      "required": [
        "enabled",
        "url"
      ],
      "type": "object"
    },
    "Me3IntentSubscribe": {
      "additionalProperties": false,
      "description": "Newsletter subscription intent. When enabled, the site accepts email subscriptions via POST /api/subscribe",
      "properties": {
        "description": {
          "description": "What subscribers will receive - for agents to explain the value",
          "type": "string"
        },
        "enabled": {
          "description": "Whether newsletter signups are enabled",
          "type": "boolean"
        },
        "frequency": {
          "description": "How often subscribers will hear from you",
          "enum": [
            "daily",
            "weekly",
            "monthly",
            "irregular"
          ],
          "type": "string"
        },
        "title": {
          "description": "Newsletter title (e.g., \"AI Weekly\") - for agents to present context",
          "type": "string"
        }
      },
      "required": [
        "enabled"
      ],
      "type": "object"
    },
    "Me3Intents": {
      "additionalProperties": false,
      "description": "Intents object - declares what actions visitors/agents can take. This is the machine-readable API contract for interacting with a person.",
      "properties": {
        "book": {
          "$ref": "#/definitions/Me3IntentBook",
          "description": "Meeting booking"
        },
        "subscribe": {
          "$ref": "#/definitions/Me3IntentSubscribe",
          "description": "Newsletter subscription"
        }
      },
      "type": "object"
    },
    "Me3Links": {
      "additionalProperties": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "not": {}
          }
        ]
      },
      "properties": {
        "email": {
          "type": "string"
        },
        "github": {
          "type": "string"
        },
        "instagram": {
          "type": "string"
        },
        "linkedin": {
          "type": "string"
        },
        "tiktok": {
          "type": "string"
        },
        "twitter": {
          "type": "string"
        },
        "website": {
          "type": "string"
        },
        "youtube": {
          "type": "string"
        }
      },
      "type": "object"
    },
    "Me3Page": {
      "additionalProperties": false,
      "description": "me3 Protocol v0.1\n\nA protocol for portable personal websites. Your site lives in a single me.json file that you can take anywhere.",
      "properties": {
        "file": {
          "description": "Path to markdown file (relative to me.json)",
          "type": "string"
        },
        "slug": {
          "description": "URL-friendly identifier",
          "type": "string"
        },
        "title": {
          "description": "Display name for navigation",
          "type": "string"
        },
        "visible": {
          "description": "Whether to show in navigation",
          "type": "boolean"
        }
      },
      "required": [
        "slug",
        "title",
        "file",
        "visible"
      ],
      "type": "object"
    },
    "Me3Profile": {
      "additionalProperties": false,
      "properties": {
        "avatar": {
          "description": "Avatar URL (absolute or relative)",
          "type": "string"
        },
        "banner": {
          "description": "Banner/header image URL",
          "type": "string"
        },
        "bio": {
          "description": "Short bio",
          "type": "string"
        },
        "buttons": {
          "description": "Call-to-action buttons (max 3)",
          "items": {
            "$ref": "#/definitions/Me3Button"
          },
          "type": "array"
        },
        "footer": {
          "anyOf": [
            {
              "$ref": "#/definitions/Me3Footer"
            },
            {
              "const": false,
              "type": "boolean"
            }
          ],
          "description": "Custom footer configuration.\n- `undefined`: default footer behavior (renderer-defined)\n- `false`: hide footer (renderer may restrict this to Pro tiers)"
        },
        "handle": {
          "description": "Username/handle",
          "type": "string"
        },
        "intents": {
          "$ref": "#/definitions/Me3Intents",
          "description": "Intents - machine-readable actions that visitors/agents can take. This is the API contract for interacting with the person."
        },
        "links": {
          "$ref": "#/definitions/Me3Links",
          "description": "Social and external links"
        },
        "location": {
          "description": "Freeform location string (e.g. \"Remote\", \"Berlin, Germany\")",
          "type": "string"
        },
        "name": {
          "description": "Display name (required)",
          "type": "string"
        },
        "pages": {
          "description": "Custom pages (markdown)",
          "items": {
            "$ref": "#/definitions/Me3Page"
          },
          "type": "array"
        },
        "version": {
          "description": "Protocol version",
          "type": "string"
        }
      },
      "required": [
        "version",
        "name"
      ],
      "type": "object"
    }
  }
}