{
  "$ref": "#/definitions/Me3Profile",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Me3BookingAvailability": {
      "additionalProperties": false,
      "description": "Availability windows for booking. Defines when the person is available for meetings.",
      "properties": {
        "timezone": {
          "description": "Timezone for the availability windows (e.g., \"America/New_York\")",
          "type": "string"
        },
        "windows": {
          "additionalProperties": false,
          "description": "Weekly availability windows by day",
          "properties": {
            "friday": {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            "monday": {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            "saturday": {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            "sunday": {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            "thursday": {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            "tuesday": {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            "wednesday": {
              "items": {
                "type": "string"
              },
              "type": "array"
            }
          },
          "type": "object"
        }
      },
      "required": [
        "timezone",
        "windows"
      ],
      "type": "object"
    },
    "Me3BookingPricing": {
      "additionalProperties": false,
      "description": "Booking pricing configuration. Allows hosts to charge for meetings with a sliding scale pay-what-you-want model.",
      "properties": {
        "allowFree": {
          "description": "Whether to allow free meetings alongside paid ones",
          "type": "boolean"
        },
        "currency": {
          "description": "Currency code",
          "enum": [
            "USD",
            "GBP",
            "EUR"
          ],
          "type": "string"
        },
        "enabled": {
          "description": "Whether paid meetings are enabled",
          "type": "boolean"
        },
        "minimumAmount": {
          "const": 5,
          "description": "Minimum amount bookers can pay (always $5)",
          "type": "number"
        },
        "suggestedAmount": {
          "description": "Suggested price amount in dollars (e.g., 50 for $50)",
          "type": "number"
        }
      },
      "required": [
        "enabled",
        "suggestedAmount",
        "currency",
        "minimumAmount",
        "allowFree"
      ],
      "type": "object"
    },
    "Me3Button": {
      "additionalProperties": false,
      "properties": {
        "icon": {
          "description": "Optional icon (emoji or icon identifier)",
          "type": "string"
        },
        "style": {
          "description": "Button style",
          "enum": [
            "primary",
            "secondary",
            "outline"
          ],
          "type": "string"
        },
        "text": {
          "description": "Button text (max 30 chars)",
          "type": "string"
        },
        "url": {
          "description": "URL to open when clicked",
          "type": "string"
        }
      },
      "required": [
        "text",
        "url"
      ],
      "type": "object"
    },
    "Me3Footer": {
      "additionalProperties": false,
      "properties": {
        "link": {
          "$ref": "#/definitions/Me3FooterLink",
          "description": "Optional custom footer link"
        },
        "text": {
          "description": "Custom footer text (e.g. \"Built by Jane\")",
          "type": "string"
        }
      },
      "type": "object"
    },
    "Me3FooterLink": {
      "additionalProperties": false,
      "properties": {
        "text": {
          "description": "Link text",
          "type": "string"
        },
        "url": {
          "description": "URL to open when clicked",
          "type": "string"
        }
      },
      "required": [
        "text",
        "url"
      ],
      "type": "object"
    },
    "Me3IntentBook": {
      "additionalProperties": false,
      "description": "Booking/scheduling intent. Declares that the person accepts meeting bookings.",
      "properties": {
        "availability": {
          "$ref": "#/definitions/Me3BookingAvailability",
          "description": "Availability windows - for native me3 booking"
        },
        "description": {
          "description": "What the meeting is about",
          "type": "string"
        },
        "duration": {
          "description": "Meeting duration in minutes",
          "type": "number"
        },
        "enabled": {
          "description": "Whether booking is enabled",
          "type": "boolean"
        },
        "pricing": {
          "$ref": "#/definitions/Me3BookingPricing",
          "description": "Pricing configuration for paid meetings (optional)"
        },
        "provider": {
          "description": "Booking provider (e.g., \"cal.com\", \"calendly\") - for external providers",
          "type": "string"
        },
        "title": {
          "description": "Meeting title (e.g., \"30-min Consultation\")",
          "type": "string"
        },
        "url": {
          "description": "Direct booking URL - for external booking systems",
          "type": "string"
        }
      },
      "required": [
        "enabled"
      ],
      "type": "object"
    },
    "Me3IntentShop": {
      "additionalProperties": false,
      "description": "Shop intent. Declares that the person sells products via a simple shop.",
      "properties": {
        "currency": {
          "description": "Shop currency",
          "enum": [
            "USD",
            "GBP",
            "EUR"
          ],
          "type": "string"
        },
        "description": {
          "description": "Shop description",
          "type": "string"
        },
        "enabled": {
          "description": "Whether shop is enabled",
          "type": "boolean"
        },
        "title": {
          "description": "Shop title/name",
          "type": "string"
        }
      },
      "required": [
        "enabled",
        "currency"
      ],
      "type": "object"
    },
    "Me3IntentSubscribe": {
      "additionalProperties": false,
      "description": "Newsletter subscription intent. When enabled, the site accepts email subscriptions via POST /api/subscribe",
      "properties": {
        "description": {
          "description": "What subscribers will receive - for agents to explain the value",
          "type": "string"
        },
        "enabled": {
          "description": "Whether newsletter signups are enabled",
          "type": "boolean"
        },
        "frequency": {
          "description": "How often subscribers will hear from you",
          "enum": [
            "daily",
            "weekly",
            "monthly",
            "irregular"
          ],
          "type": "string"
        },
        "title": {
          "description": "Newsletter title (e.g., \"AI Weekly\") - for agents to present context",
          "type": "string"
        }
      },
      "required": [
        "enabled"
      ],
      "type": "object"
    },
    "Me3Intents": {
      "additionalProperties": false,
      "description": "Intents object - declares what actions visitors/agents can take. This is the machine-readable API contract for interacting with a person.",
      "properties": {
        "book": {
          "$ref": "#/definitions/Me3IntentBook",
          "description": "Meeting booking"
        },
        "shop": {
          "$ref": "#/definitions/Me3IntentShop",
          "description": "Shop intent"
        },
        "subscribe": {
          "$ref": "#/definitions/Me3IntentSubscribe",
          "description": "Newsletter subscription"
        }
      },
      "type": "object"
    },
    "Me3Links": {
      "additionalProperties": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "not": {}
          }
        ]
      },
      "properties": {
        "email": {
          "type": "string"
        },
        "github": {
          "type": "string"
        },
        "instagram": {
          "type": "string"
        },
        "linkedin": {
          "type": "string"
        },
        "tiktok": {
          "type": "string"
        },
        "twitter": {
          "type": "string"
        },
        "website": {
          "type": "string"
        },
        "youtube": {
          "type": "string"
        }
      },
      "type": "object"
    },
    "Me3Page": {
      "additionalProperties": false,
      "description": "me3 Protocol v0.1\n\nA protocol for portable personal websites. Your site lives in a single me.json file that you can take anywhere.",
      "properties": {
        "file": {
          "description": "Path to markdown file (relative to me.json)",
          "type": "string"
        },
        "slug": {
          "description": "URL-friendly identifier",
          "type": "string"
        },
        "title": {
          "description": "Display name for navigation",
          "type": "string"
        },
        "visible": {
          "description": "Whether to show in navigation",
          "type": "boolean"
        }
      },
      "required": [
        "slug",
        "title",
        "file",
        "visible"
      ],
      "type": "object"
    },
    "Me3Post": {
      "additionalProperties": false,
      "properties": {
        "excerpt": {
          "description": "Short excerpt for archive/listing (optional)",
          "type": "string"
        },
        "file": {
          "description": "Path to markdown file (relative to me.json)",
          "type": "string"
        },
        "publishedAt": {
          "description": "ISO publish date (optional)",
          "type": "string"
        },
        "slug": {
          "description": "URL-friendly identifier",
          "type": "string"
        },
        "title": {
          "description": "Display name for listing",
          "type": "string"
        }
      },
      "required": [
        "slug",
        "title",
        "file"
      ],
      "type": "object"
    },
    "Me3Product": {
      "additionalProperties": false,
      "properties": {
        "available": {
          "description": "Whether product is available for purchase",
          "type": "boolean"
        },
        "currency": {
          "description": "Currency code",
          "enum": [
            "USD",
            "GBP",
            "EUR"
          ],
          "type": "string"
        },
        "excerpt": {
          "description": "Short excerpt for listings (optional)",
          "type": "string"
        },
        "file": {
          "description": "Path to markdown file (relative to me.json)",
          "type": "string"
        },
        "images": {
          "description": "Product images (URLs)",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "price": {
          "description": "Product price in cents (e.g., 2999 for $29.99)",
          "type": "number"
        },
        "publishedAt": {
          "description": "ISO publish date (optional)",
          "type": "string"
        },
        "slug": {
          "description": "URL-friendly identifier",
          "type": "string"
        },
        "title": {
          "description": "Product name",
          "type": "string"
        }
      },
      "required": [
        "slug",
        "title",
        "file",
        "price",
        "currency"
      ],
      "type": "object"
    },
    "Me3Profile": {
      "additionalProperties": false,
      "properties": {
        "avatar": {
          "description": "Avatar URL (absolute or relative)",
          "type": "string"
        },
        "banner": {
          "description": "Banner/header image URL",
          "type": "string"
        },
        "bio": {
          "description": "Short bio",
          "type": "string"
        },
        "buttons": {
          "description": "Call-to-action buttons (max 3)",
          "items": {
            "$ref": "#/definitions/Me3Button"
          },
          "type": "array"
        },
        "footer": {
          "anyOf": [
            {
              "$ref": "#/definitions/Me3Footer"
            },
            {
              "const": false,
              "type": "boolean"
            }
          ],
          "description": "Custom footer configuration.\n- `undefined`: default footer behavior (renderer-defined)\n- `false`: hide footer (renderer may restrict this to Pro tiers)"
        },
        "handle": {
          "description": "Username/handle",
          "type": "string"
        },
        "intents": {
          "$ref": "#/definitions/Me3Intents",
          "description": "Intents - machine-readable actions that visitors/agents can take. This is the API contract for interacting with the person."
        },
        "links": {
          "$ref": "#/definitions/Me3Links",
          "description": "Social and external links"
        },
        "location": {
          "description": "Freeform location string (e.g. \"Remote\", \"Berlin, Germany\")",
          "type": "string"
        },
        "name": {
          "description": "Display name (required)",
          "type": "string"
        },
        "pages": {
          "description": "Custom pages (markdown)",
          "items": {
            "$ref": "#/definitions/Me3Page"
          },
          "type": "array"
        },
        "posts": {
          "description": "Blog posts (markdown)",
          "items": {
            "$ref": "#/definitions/Me3Post"
          },
          "type": "array"
        },
        "products": {
          "description": "Products (markdown)",
          "items": {
            "$ref": "#/definitions/Me3Product"
          },
          "type": "array"
        },
        "verification": {
          "$ref": "#/definitions/Me3Verification",
          "description": "Human verification status (populated from account, not editable per-site)"
        },
        "version": {
          "description": "Protocol version",
          "type": "string"
        }
      },
      "required": [
        "version",
        "name"
      ],
      "type": "object"
    },
    "Me3Verification": {
      "additionalProperties": false,
      "properties": {
        "verified": {
          "description": "Whether the author is a verified human",
          "type": "boolean"
        },
        "verifiedAt": {
          "description": "When verification occurred (ISO timestamp)",
          "type": "string"
        },
        "verifiedDomain": {
          "description": "The domain used for verification",
          "type": "string"
        }
      },
      "required": [
        "verified"
      ],
      "type": "object"
    }
  }
}